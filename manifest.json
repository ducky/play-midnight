{
  "applications": {
    "gecko": {
      "id": "firefox@playmidnight.com"
    }
  },

  "manifest_version": 2,
  "name": "Play Midnight for Google Play Musicâ„¢",
  "short_name": "Play Midnight",
  "version": "2.4.8",

  "description": "A theme created for Google Play Music to give your eyes a break with a darker layout and color options.",

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "permissions": [
    "storage",
    "*://play-music.gstatic.com/*"
  ],

  "background": {
    "scripts": ["dist/js/background.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://play.google.com/music/listen*"],
      "run_at": "document_end",
      "js": ["dist/js/play-midnight.js"]
    }
  ],

  "web_accessible_resources": ["dist/*"]
}
